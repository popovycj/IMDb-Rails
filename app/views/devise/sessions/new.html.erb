<h2 class="text-center jumbotron mb-3">Log in</h2>

<div class="d-flex justify-content-center align-items-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-inline") do |f| %>
    <div class="form-group mb-3">
      <%= f.label :email, class: "sr-only mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password, class: "sr-only mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input mb-1" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.submit "Log in", class: "btn btn-warning" %>
    </div>
  <% end %>
</div>
