<div class="container">
  <h1>Edit Movie</h1>

  <%= form_with(model: @movie, url: admin_movie_path(@movie), local: true) do |form| %>
    <% if @movie.errors.any? %>
      <div class="alert alert-danger" id="error_explanation">
        <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

        <ul>
          <% @movie.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title, class: "control-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "control-label" %>
      <%= form.rich_text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :image, class: "control-label" %>
      <%= form.file_field :image, class: "form-control-file" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="d-flex justify-content-between">
    <%= link_to 'Back', @movie, class: "btn btn-link" %>
    <%= link_to 'Main', movies_path, class: "btn btn-link" %>
  </div>
</div>
